		Sub Opening()
		  // Should we run in test mode?
		  
		  // Get the arguments passed to the app.
		  Var args As String = System.CommandLine.Replace(App.ExecutableFile.NativePath, "").Trim
		  
		  // If the argument is just "test" then we show the tests overview window. Otherwise it's the welcome window.
		  If args = "test" Then
		    WinTestsOverview.Show
		    WinTestsOverview.Center
		  Else
		    WinWelcome.Show
		  End If
		End Sub
	#tag EndEvent


