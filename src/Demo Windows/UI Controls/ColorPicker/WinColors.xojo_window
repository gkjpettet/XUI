#tag WindowCode
	#tag Event
		Sub Opening()
		  // Randomise the starting colours.
		  SwatchMacStyle.Value = _
		  Color.RGB(System.Random.InRange(0, 255), System.Random.InRange(0, 255), System.Random.InRange(0, 255))
		  
		  SwatchWindows11Style.Value = _
		  Color.RGB(System.Random.InRange(0, 255), System.Random.InRange(0, 255), System.Random.InRange(0, 255))
		  
		  SwatchGnomeStyle.Value = _
		  Color.RGB(System.Random.InRange(0, 255), System.Random.InRange(0, 255), System.Random.InRange(0, 255))
		End Sub
	#tag EndEvent


	#tag MenuHandler
		Function FileCloseWindow() As Boolean Handles FileCloseWindow.Action
