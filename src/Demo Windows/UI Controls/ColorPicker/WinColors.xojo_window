#tag Events ButtonShowColorPicker
	#tag Event
		Sub Pressed()
		  // Create the picker. I'm just using blue for the initial colour here.
		  Var cp As New XUIColorPicker(Color.FromString("&h00" + LabelCustomColor.Text))
		  
		  // We want to be informed when the colour changes so hook into that event.
		  AddHandler cp.ColorChanged, AddressOf PickerColorChanged
		  
		  // Show the picker.
		  cp.ShowModal(Self)
		End Sub
	#tag EndEvent
